    android:layout_height="match_parent"
    android:keepScreenOn="true">

    <thanh.droidx.barcodereader.camera.CameraSourcePreview
        android:id="@+id/barcodecapture_camerapreview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerVertical="true">

        <thanh.droidx.barcodereader.camera.GraphicOverlay
            android:id="@+id/barcodecapture_graphicOverlay"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

    </thanh.droidx.barcodereader.camera.CameraSourcePreview>

</RelativeLayout>
